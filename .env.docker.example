# SimpleNotes - Docker Environment Variables
# Copy this file to .env and fill in your values

# AWS Credentials (required for DynamoDB access)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=ca-central-1

# DynamoDB Tables (defaults to staging)
USERS_TABLE=simplenotes-staging-users
HOUSEHOLDS_TABLE=simplenotes-staging-households
LISTS_TABLE=simplenotes-staging-lists
INVITES_TABLE=simplenotes-staging-invites

# Cognito Configuration (get from AWS Console or Terraform output)
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_DOMAIN=

# Optional: Use local DynamoDB instead of AWS
# Set to "http://dynamodb-local:8000" to use local DynamoDB
# DYNAMODB_ENDPOINT=
