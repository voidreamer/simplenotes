{
  "appId": "app.simplenotes.household",
  "appName": "SimpleNotes",
  "webDir": "dist",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#e8e0d0",
      "showSpinner": false,
      "launchAutoHide": true,
      "splashFullScreen": true,
      "splashImmersive": true
    },
    "StatusBar": {
      "style": "Dark",
      "backgroundColor": "#e8e0d0"
    },
    "Keyboard": {
      "resize": "body",
      "resizeOnFullScreen": true
    }
  },
  "ios": {
    "contentInset": "automatic",
    "preferredContentMode": "mobile",
    "backgroundColor": "#e8e0d0"
  },
  "android": {
    "allowMixedContent": false,
    "backgroundColor": "#e8e0d0"
  }
}
